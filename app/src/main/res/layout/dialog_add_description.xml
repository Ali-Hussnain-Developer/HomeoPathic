<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp"
        android:background="@drawable/bg_edittext_curved"
        android:orientation="vertical"
        app:ignore="NamespaceTypo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:weightSum="2"
            android:gravity="end">

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:layout_weight="1"
                android:backgroundTint="@android:color/darker_gray"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btnSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/save"
                android:layout_weight="1"
                android:backgroundTint="#4CAF50"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <EditText
            android:id="@+id/edtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_title"
            android:inputType="text"
            android:textAllCaps="true"
            android:textColorHint="@color/black"
            android:maxLines="1"
            android:background="@drawable/bg_edittext_curved"
            android:padding="12dp"
            android:textColor="@android:color/black"
            android:textSize="16sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_edittext_curved"
            android:orientation="vertical"
            >
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginVertical="10dp">
                    <ImageView
                        android:id="@+id/btnRedo"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="10dp"
                        android:layout_margin="2dp"
                        android:src="@drawable/ic_redo"
                        />
                    <ImageView
                        android:id="@+id/btnUndo"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="10dp"
                        android:layout_margin="2dp"
                        android:src="@drawable/ic_undo"
                        />
                    <ImageView
                        android:id="@+id/btnBold"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="10dp"
                        android:layout_margin="2dp"
                        android:src="@drawable/ic_bold"
                        />

                    <ImageView
                        android:id="@+id/btnItalic"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="10dp"
                        android:layout_margin="2dp"
                        android:src="@drawable/ic_italic"
                        />

                    <ImageView
                        android:id="@+id/btnUnderline"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="10dp"
                        android:layout_margin="2dp"
                        app:tint="@color/black"
                        android:src="@drawable/ic_underline"
                        />
                    <ImageView
                        android:id="@+id/btnStrikeThrough"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="10dp"
                        app:tint="@color/black"
                        android:tint="@color/black"
                        app:ignore="UseAppTint"
                        android:layout_margin="2dp"
                        android:src="@drawable/strikethrough"
                        />

                    <ImageView
                        android:id="@+id/btnBullets"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="10dp"
                        app:tint="@color/black"
                        android:tint="@color/black"
                        app:ignore="UseAppTint"
                        android:layout_margin="2dp"
                        android:src="@drawable/ic_bullets"
                         />

                    <ImageView
                        android:id="@+id/btnNumbers"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="10dp"
                        android:tint="@color/black"
                        app:ignore="UseAppTint"
                        app:tint="@color/black"
                        android:layout_margin="2dp"
                        android:src="@drawable/numbers"
                        />

                    <ImageView
                        android:id="@+id/btnAlignCenter"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="10dp"
                        android:layout_margin="2dp"
                        android:src="@drawable/ic_alignment" />
                    <ImageView
                        android:id="@+id/btnAlignLeft"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="10dp"
                        android:layout_margin="2dp"
                        android:src="@drawable/ic_align_left" />

                    <ImageView
                        android:id="@+id/btnAlignRight"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="10dp"
                        android:layout_margin="2dp"
                        android:src="@drawable/ic_align_right" />


                </LinearLayout>
            </HorizontalScrollView>
            <jp.wasabeef.richeditor.RichEditor
                android:id="@+id/edtDescription"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:hint="@string/enter_description"
                android:textAllCaps="false"
                android:layout_margin="5dp"
                android:layout_marginTop="16dp"
                android:padding="12dp"
                android:textColor="@android:color/black"
                android:textSize="16sp"/>
        </LinearLayout>


    </LinearLayout>